// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id        String   @id @default(cuid())
  userId    String
  name      String
  email     String?
  phone     String?
  company   String?
  logo      String?  // Path to uploaded logo image
  status    String   @default("active") // active, inactive
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  projects  Project[]
  invoices  Invoice[]

  @@index([userId])
}

model Project {
  id          String   @id @default(cuid())
  userId      String
  name        String
  description String?
  notes       String?
  status      String   @default("not_started") // not_started, in_progress, on_hold, completed
  priority    String   @default("medium") // low, medium, high
  dueDate     DateTime?
  budget      Float?
  hourlyRate  Float?
  clientId    String
  client      Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  tasks       Task[]
  images      ProjectImage[]
  timeEntries TimeEntry[]
  invoices    Invoice[]
  access      ProjectAccess[]

  @@index([userId])
  @@index([userId, status])
  @@index([userId, dueDate])
  @@index([userId, status, dueDate])
  @@index([userId, updatedAt])
  @@index([clientId])
}

model TimeEntry {
  id          String   @id @default(cuid())
  hours       Float
  description String?
  date        DateTime @default(now())
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())

  @@index([projectId])
}

model ProjectImage {
  id        String   @id @default(cuid())
  path      String
  name      String
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}

model Task {
  id           String   @id @default(cuid())
  userId       String
  title        String
  description  String?
  notes        String?
  status       String   @default("todo") // todo, in_progress, done
  sortOrder    Int      @default(0)
  priority     String   @default("medium") // low, medium, high
  startDate    DateTime?
  dueDate      DateTime?
  projectId    String?
  project      Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  // Bookmark fields
  url          String?  // Bookmarked URL
  bookmarkType String?  // "youtube" | "twitter" | null
  thumbnailUrl String?  // External thumbnail URL
  tags         String[] @default([]) // Tag array
  images       TaskImage[]
  files        TaskFile[]
  comments     TaskComment[]

  @@index([userId])
  @@index([userId, status])
  @@index([userId, dueDate])
  @@index([userId, projectId])
  @@index([userId, status, dueDate])
  @@index([projectId])
  @@index([projectId, url])
}

model TaskImage {
  id        String   @id @default(cuid())
  path      String
  name      String
  taskId    String
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@index([taskId])
}

model TaskFile {
  id        String   @id @default(cuid())
  path      String
  name      String
  type      String   // file mime type
  size      Int      // file size in bytes
  taskId    String
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@index([taskId])
}

model TaskComment {
  id        String   @id @default(cuid())
  content   String
  taskId    String
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([taskId])
}

model ProjectAccess {
  id        String   @id @default(cuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  userId    String   // Clerk user ID of the team member
  role      String   @default("viewer") // "viewer" | "editor" | "manager"
  grantedBy String   // Clerk user ID of admin who granted access
  createdAt DateTime @default(now())

  @@unique([projectId, userId])
  @@index([userId])
  @@index([projectId])
}

model CachedInsight {
  id             String   @id @default(cuid())
  userId         String   @unique
  insights       String   // JSON-serialized Insight[]
  context        String?  // Hash of input data for smart cache invalidation
  expiresAt      DateTime
  createdAt      DateTime @default(now())
  dailyCalls     Int      @default(0)
  dailyCallsDate String?  // YYYY-MM-DD â€” resets when date changes

  @@index([userId, expiresAt])
}

model Subscription {
  id                    String    @id @default(cuid())
  userId                String    @unique
  polarCustomerId       String?
  polarSubscriptionId   String?
  plan                  String    @default("free") // free, pro, team
  status                String    @default("active") // active, canceled, past_due, trialing
  currentPeriodEnd      DateTime?
  cancelAtPeriodEnd     Boolean   @default(false)
  // Telegram Bot integration
  telegramChatId            String?   @unique
  telegramVerifyCode        String?
  telegramVerifyExpires     DateTime?
  telegramRemindersEnabled  Boolean   @default(false)
  // API access
  apiToken              String?   @unique
  inboundEmailToken     String?   @unique
  // Admin controls
  suspendedAt           DateTime?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([userId])
  @@index([polarCustomerId])
  @@index([polarSubscriptionId])
}

model Invoice {
  id          String        @id @default(cuid())
  userId      String
  number      String        // "INV-001" auto-incremented per user
  clientId    String
  client      Client        @relation(fields: [clientId], references: [id])
  projectId   String?
  project     Project?      @relation(fields: [projectId], references: [id])
  status      String        @default("draft") // draft, sent, paid
  issueDate   DateTime      @default(now())
  dueDate     DateTime
  taxRate     Float         @default(0)
  notes       String?
  fromName    String?
  fromEmail   String?
  fromAddress String?
  shareToken  String        @unique @default(cuid())
  paidAt      DateTime?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  items       InvoiceItem[]

  @@index([userId])
  @@index([userId, status])
  @@index([userId, createdAt])
  @@index([clientId])
}

model SystemConfig {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  updatedAt DateTime @updatedAt
}

model InvoiceItem {
  id          String  @id @default(cuid())
  invoiceId   String
  invoice     Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  description String
  quantity    Float
  rate        Float
  amount      Float

  @@index([invoiceId])
}
